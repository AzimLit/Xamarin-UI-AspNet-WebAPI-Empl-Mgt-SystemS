<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmpMgtSys.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Margin="20" Orientation="Vertical" VerticalOptions="CenterAndExpand">
            <Entry x:Name="DeptId" Placeholder="User Name"/>
            <Entry x:Name="DeptName" Placeholder="Password"/>
            <Button Text="Login" Background="green" TextColor="Yellow" Margin="30"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>